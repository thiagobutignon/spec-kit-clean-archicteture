{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Regent Template Part Schema",
  "description": "Schema for validating .part.regent template fragment files. These files contain sections that will be combined to create complete regent templates.",
  "type": "object",
  "$defs": {
    "templateString": {
      "description": "Template string that may contain __PLACEHOLDERS__ for template design",
      "type": "string"
    },
    "semanticVersion": {
      "description": "Strict semantic versioning format",
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    }
  },
  "$comment": "Part files are flexible - they can contain any subset of the full regent schema properties",
  "additionalProperties": true,
  "properties": {
    "version": {
      "$ref": "#/$defs/semanticVersion",
      "description": "Semantic version of the template"
    },
    "metadata": {
      "type": "object",
      "description": "Metadata section of the template"
    },
    "structure": {
      "type": "object",
      "description": "Structure section of the template"
    },
    "architecture": {
      "type": "object",
      "description": "Architecture section of the template"
    },
    "rules": {
      "type": "object",
      "description": "Rules section of the template"
    },
    "steps": {
      "type": "array",
      "description": "Implementation steps"
    },
    "troubleshooting": {
      "type": "object",
      "description": "Troubleshooting section"
    },
    "refactoring": {
      "type": "object",
      "description": "Refactoring guidelines"
    },
    "learning_patterns": {
      "type": "object",
      "description": "Learning patterns for improvement"
    },
    "ai_guidelines": {
      "type": "array",
      "description": "AI processing guidelines"
    },
    "evaluation": {
      "type": "object",
      "description": "Evaluation criteria"
    }
  }
}