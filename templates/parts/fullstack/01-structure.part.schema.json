{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fullstack Next.js 15 Structure Part Schema",
  "description": "Schema for fullstack Next.js 15 with unified frontend and backend",
  "type": "object",
  "properties": {
    "structure": {
      "type": "object",
      "description": "Fullstack Next.js 15 application structure",
      "properties": {
        "app": {
          "type": "object",
          "description": "Next.js 15 App Router with API Routes",
          "properties": {
            "basePath": {
              "type": "string",
              "description": "Base path for App Router",
              "pattern": ".*__PROJECT_NAME__.*/src/app"
            },
            "folders": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "files": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          },
          "required": ["basePath", "folders", "files"],
          "additionalProperties": false
        },
        "feature_module": {
          "type": "object",
          "description": "Feature Module with Use Case Slices for fullstack",
          "properties": {
            "basePath": {
              "type": "string",
              "description": "Base path for feature module",
              "pattern": ".*__PROJECT_NAME__.*/src/features/.*__FEATURE_NAME_KEBAB_CASE__.*"
            },
            "use_case_slice": {
              "type": "object",
              "properties": {
                "basePath": {
                  "type": "string",
                  "pattern": ".*__USE_CASE_NAME_KEBAB_CASE__.*"
                },
                "layers": {
                  "type": "object",
                  "properties": {
                    "domain": { "$ref": "#/definitions/layer" },
                    "data": { "$ref": "#/definitions/layer" },
                    "infra": { "$ref": "#/definitions/layer" },
                    "presentation": { "$ref": "#/definitions/layer" },
                    "validation": { "$ref": "#/definitions/layer" },
                    "main": { "$ref": "#/definitions/layer" },
                    "tests": { "$ref": "#/definitions/layer" }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "feature_shared": {
              "type": "object",
              "properties": {
                "basePath": {
                  "type": "string"
                },
                "layers": {
                  "type": "object",
                  "properties": {
                    "domain": { "$ref": "#/definitions/layer" },
                    "infra": { "$ref": "#/definitions/layer" },
                    "presentation": { "$ref": "#/definitions/layer" }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "feature_main": {
              "type": "object",
              "properties": {
                "basePath": {
                  "type": "string"
                },
                "folders": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "required": ["basePath"],
          "additionalProperties": false
        },
        "shared": {
          "type": "object",
          "description": "Global shared code",
          "properties": {
            "basePath": {
              "type": "string",
              "description": "Base path for shared code",
              "pattern": ".*__PROJECT_NAME__.*/src/shared"
            },
            "layers": {
              "type": "object",
              "properties": {
                "domain": { "$ref": "#/definitions/layer" },
                "data": { "$ref": "#/definitions/layer" },
                "infra": { "$ref": "#/definitions/layer" },
                "presentation": { "$ref": "#/definitions/layer" },
                "validation": { "$ref": "#/definitions/layer" },
                "main": { "$ref": "#/definitions/layer" }
              },
              "additionalProperties": false
            }
          },
          "required": ["basePath", "layers"],
          "additionalProperties": false
        }
      },
      "required": ["app", "feature_module", "shared"],
      "additionalProperties": false
    },
    "integration": {
      "type": "object",
      "description": "Integration examples for fullstack Next.js",
      "properties": {
        "use_case_example": {
          "type": "object",
          "properties": {
            "create_feature_structure": {
              "type": "array",
              "items": { "type": "string" }
            },
            "create_slice_directory": {
              "type": "array",
              "items": { "type": "string" }
            },
            "create_slice_files": {
              "type": "array",
              "items": { "type": "string" }
            },
            "feature_shared_files": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "type": "object",
                    "properties": {
                      "create_if_not_exists": { "type": "string" },
                      "modify": { "type": "string" },
                      "action": { "type": "string" }
                    }
                  }
                ]
              }
            },
            "integrate_nextjs": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "type": "object",
                    "properties": {
                      "create_if_not_exists": { "type": "string" },
                      "modify": { "type": "string" },
                      "action": { "type": "string" }
                    }
                  }
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "example_flow": {
          "type": "object",
          "properties": {
            "frontend": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "backend": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "benefits": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["structure"],
  "additionalProperties": true,
  "definitions": {
    "layer": {
      "type": "object",
      "properties": {
        "folders": {
          "type": "array",
          "description": "List of folders for this layer",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "files": {
          "type": "array",
          "description": "List of files for this layer",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    }
  }
}