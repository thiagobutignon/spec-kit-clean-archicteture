{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Regent Header Part Schema",
  "description": "Schema for validating the header section (00-header.part.regent) of regent templates",
  "type": "object",
  "$defs": {
    "semanticVersion": {
      "description": "Strict semantic versioning format",
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    }
  },
  "required": ["version", "metadata"],
  "properties": {
    "version": {
      "$ref": "#/$defs/semanticVersion",
      "description": "Semantic version of the template following SemVer 2.0.0 specification",
      "examples": ["1.0.0", "2.1.3", "3.0.0-alpha.1"]
    },
    "metadata": {
      "type": "object",
      "required": ["title", "description", "source", "lastUpdated", "layers"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the template (may contain placeholders like __FEATURE_NAME_PASCAL_CASE__)"
        },
        "description": {
          "type": "string",
          "description": "Description of what the template generates"
        },
        "source": {
          "type": "string",
          "description": "Source file name"
        },
        "lastUpdated": {
          "type": "string",
          "description": "Last update date (may be placeholder __CURRENT_DATE__ or YYYY-MM-DD format)",
          "examples": ["__CURRENT_DATE__", "2024-01-15", "2023-12-31"]
        },
        "layers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["domain", "data", "infra", "presentation", "validation", "main"]
          },
          "description": "Architectural layers implemented by this template"
        },
        "ubiquitousLanguage": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["term", "definition"],
            "properties": {
              "term": {
                "type": "string",
                "description": "Domain term (may contain placeholders)"
              },
              "definition": {
                "type": "string",
                "description": "Business definition of the term (may contain placeholders)"
              }
            },
            "additionalProperties": false
          },
          "description": "Domain-driven design ubiquitous language definitions"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}