{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frontend Structure Part Schema",
  "description": "Schema for Next.js 15 + Clean Architecture frontend structure",
  "type": "object",
  "properties": {
    "structure": {
      "type": "object",
      "description": "Next.js 15 App Router + Clean Architecture structure",
      "properties": {
        "app": {
          "type": "object",
          "description": "Next.js 15 App Router structure",
          "properties": {
            "basePath": {
              "type": "string",
              "description": "Base path for the App Router",
              "pattern": ".*__PROJECT_NAME__.*/src/app"
            },
            "folders": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "files": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          },
          "required": ["basePath", "folders", "files"],
          "additionalProperties": false
        },
        "feature_module": {
          "type": "object",
          "description": "Feature Module with Use Case Slices",
          "properties": {
            "basePath": {
              "type": "string",
              "description": "Base path for feature module",
              "pattern": ".*__PROJECT_NAME__.*/src/features/.*__FEATURE_NAME_KEBAB_CASE__.*"
            },
            "use_case_slice": {
              "type": "object",
              "properties": {
                "basePath": {
                  "type": "string",
                  "pattern": ".*__USE_CASE_NAME_KEBAB_CASE__.*"
                },
                "layers": {
                  "type": "object",
                  "properties": {
                    "domain": { "$ref": "#/definitions/layer" },
                    "data": { "$ref": "#/definitions/layer" },
                    "presentation": { "$ref": "#/definitions/layer" },
                    "validation": { "$ref": "#/definitions/layer" },
                    "main": { "$ref": "#/definitions/layer" },
                    "__tests__": { "$ref": "#/definitions/layer" }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "feature_shared": {
              "type": "object",
              "properties": {
                "basePath": {
                  "type": "string"
                },
                "layers": {
                  "type": "object",
                  "properties": {
                    "domain": { "$ref": "#/definitions/layer" },
                    "infra": { "$ref": "#/definitions/layer" },
                    "presentation": { "$ref": "#/definitions/layer" }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "feature_main": {
              "type": "object",
              "properties": {
                "basePath": {
                  "type": "string"
                },
                "folders": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "required": ["basePath"],
          "additionalProperties": false
        },
        "shared": {
          "type": "object",
          "description": "Shared code with Clean Architecture layers",
          "properties": {
            "basePath": {
              "type": "string",
              "description": "Base path for shared code",
              "pattern": ".*__PROJECT_NAME__.*/src/shared"
            },
            "layers": {
              "type": "object",
              "properties": {
                "domain": {
                  "$ref": "#/definitions/layer"
                },
                "data": {
                  "$ref": "#/definitions/layer"
                },
                "infra": {
                  "$ref": "#/definitions/layer"
                },
                "presentation": {
                  "$ref": "#/definitions/layer"
                },
                "validation": {
                  "$ref": "#/definitions/layer"
                },
                "main": {
                  "$ref": "#/definitions/layer"
                }
              },
              "additionalProperties": false
            }
          },
          "required": ["basePath", "layers"],
          "additionalProperties": false
        }
      },
      "required": ["app", "feature_module", "shared"],
      "additionalProperties": false
    },
    "integration": {
      "type": "object",
      "description": "Integration examples between App Router and features",
      "properties": {
        "use_case_example": {
          "type": "object",
          "description": "Example of hybrid architecture workflow",
          "properties": {
            "create_feature_structure": {
              "type": "array",
              "items": { "type": "string" }
            },
            "create_slice_directory": {
              "type": "array",
              "items": { "type": "string" }
            },
            "create_slice_files": {
              "type": "array",
              "items": { "type": "string" }
            },
            "feature_shared_files": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "type": "object",
                    "properties": {
                      "create_if_not_exists": { "type": "string" },
                      "modify": { "type": "string" },
                      "action": { "type": "string" }
                    }
                  }
                ]
              }
            },
            "integrate_app_router": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "type": "object",
                    "properties": {
                      "create_if_not_exists": { "type": "string" },
                      "modify": { "type": "string" },
                      "action": { "type": "string" }
                    }
                  }
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "example_integration": {
          "type": "object",
          "properties": {
            "app_route": {
              "type": "string",
              "description": "Example app route path"
            },
            "imports_from": {
              "type": "string",
              "description": "Path to import components from"
            },
            "server_action": {
              "type": "string",
              "description": "Path to server action"
            },
            "used_in": {
              "type": "string",
              "description": "Where the server action is used"
            },
            "api_route": {
              "type": "string",
              "description": "API route path"
            },
            "imports_handler_from": {
              "type": "string",
              "description": "Path to import handlers from"
            },
            "use_case_composite": {
              "type": "string",
              "description": "Path to use case composite"
            },
            "feature_shared_model": {
              "type": "string",
              "description": "Path to feature shared model"
            },
            "used_by_slices": {
              "type": "string",
              "description": "Pattern for slice usage"
            },
            "global_shared_ui": {
              "type": "string",
              "description": "Path to global shared UI components"
            },
            "global_shared_hooks": {
              "type": "string",
              "description": "Path to global shared React hooks"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["structure"],
  "additionalProperties": true,
  "definitions": {
    "layer": {
      "type": "object",
      "properties": {
        "folders": {
          "type": "array",
          "description": "List of folders for this layer",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "files": {
          "type": "array",
          "description": "List of files for this layer",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    }
  }
}