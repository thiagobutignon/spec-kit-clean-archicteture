{
  // 1. Associa a extensão .regent com a linguagem YAML
  "files.associations": {
    "*.regent": "yaml"
  },

  // 2. Aplica seu schema de validação a todos os arquivos .regent
  "yaml.schemas": {
    // Schema específico para o header part compartilhado
    "./templates/parts/shared/00-header.part.schema.json": [
      "templates/parts/shared/00-header.part.regent"
    ],
    // Schema específico para backend structure part
    "./templates/parts/backend/01-structure.part.schema.json": [
      "templates/parts/backend/01-structure.part.regent"
    ],
    // Schema específico para frontend structure part
    "./templates/parts/frontend/01-structure.part.schema.json": [
      "templates/parts/frontend/01-structure.part.regent"
    ],
    // Schema específico para fullstack structure part
    "./templates/parts/fullstack/01-structure.part.schema.json": [
      "templates/parts/fullstack/01-structure.part.regent"
    ],
    // Schema específico para backend architecture part
    "./templates/parts/backend/02-architecture.part.schema.json": [
      "templates/parts/backend/02-architecture.part.regent"
    ],
    // Schema específico para frontend architecture part
    "./templates/parts/frontend/02-architecture.part.schema.json": [
      "templates/parts/frontend/02-architecture.part.regent"
    ],
    // Schema específico para fullstack architecture part
    "./templates/parts/fullstack/02-architecture.part.schema.json": [
      "templates/parts/fullstack/02-architecture.part.regent"
    ],
    // Schema específico para backend rules part
    "./templates/parts/backend/03-rules.part.schema.json": [
      "templates/parts/backend/03-rules.part.regent"
    ],
    // Schema específico para frontend rules part
    "./templates/parts/frontend/03-rules.part.schema.json": [
      "templates/parts/frontend/03-rules.part.regent"
    ],
    // Schema específico para fullstack rules part
    "./templates/parts/fullstack/03-rules.part.schema.json": [
      "templates/parts/fullstack/03-rules.part.regent"
    ],
    // Schema específico para backend domain steps part
    "./templates/parts/backend/steps/01-domain.part.schema.json": [
      "templates/parts/backend/steps/01-domain.part.regent"
    ],
    // Schema para arquivos completos .regent (excluindo .part.regent)
    "./regent.schema.json": [
      "templates/template.regent",
      "*.regent",
      "!*.part.regent"
    ]
},
"cSpell.words": [
    "RLHF",
    "axios",
    "Vitest",
    "Shadcn",
    "pgvector",
    "usecases",
    "kebab",
    "pascal"
],
"files.watcherExclude": {
  "**/.git/objects/**": true,
  "**/.git/subtree-cache/**": true,
  "**/.hg/store/**": true,
  "**/.dart_tool": true,
  "**/.git/**": true,
  "**/node_modules/**": true,
  "**/.vscode/**": true
}
}