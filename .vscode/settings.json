{
  // 1. Associa a extensão .regent com a linguagem YAML
  "files.associations": {
    "*.regent": "yaml"
  },

  // 2. Aplica seu schema de validação a todos os arquivos .regent
  "yaml.schemas": {
    // O caminho para o seu arquivo de schema (configurável por projeto)
    // Use caminho relativo ao workspace root ou absoluto
    "${workspaceFolder}/regent.schema.json": [
      "*.regent",
      "templates/**/*.regent"
    ]
},
"cSpell.words": [
    "RLHF"
]
}