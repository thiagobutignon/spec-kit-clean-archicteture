{
  "name": "the-regent-cli",
  "version": "2.2.0",
  "description": "The Regent - AI-powered Clean Architecture CLI with guaranteed architectural quality",
  "type": "module",
  "main": "src/cli/main.js",
  "bin": {
    "regent": "src/bin/regent"
  },
  "files": [
    "src/**/*",
    ".claude/**/*",
    ".vscode/**/*",
    ".regent/**/*",
    "*.md",
    "*.json",
    "package.json"
  ],
  "keywords": [
    "clean-architecture",
    "cli",
    "ai-assisted",
    "spec-driven",
    "typescript",
    "code-generation",
    "tdd",
    "ddd"
  ],
  "homepage": "https://github.com/thiagobutignon/spec-kit-clean-archicteture#readme",
  "bugs": {
    "url": "https://github.com/thiagobutignon/spec-kit-clean-archicteture/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagobutignon/spec-kit-clean-archicteture.git"
  },
  "author": "Thiago Butignon <thiagobutignon@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run templates:build && husky",
    "prepublishOnly": "npm run test",
    "postinstall": "chmod +x src/bin/regent",
    "lint": "eslint .",
    "test": "vitest --passWithNoTests",
    "templates:validate": "tsx src/validate-template.ts",
    "templates:validate-all": "tsx src/validate-template.ts --all",
    "templates:build": "./src/templates/build-template.sh",
    "execute": "tsx src/execute-steps.ts",
    "rlhf:analyze": "tsx src/core/rlhf-system.ts analyze",
    "rlhf:report": "tsx src/core/rlhf-system.ts report",
    "rlhf:dashboard": "tsx src/scripts/rlhf-dashboard.ts",
    "rollback": "tsx src/scripts/rollback-manager.ts",
    "arch:validate": "depcruise src --config .dependency-cruiser.cjs",
    "arch:graph": "depcruise src --include-only '^src' --output-type dot | dot -T svg > docs/architecture-graph.svg",
    "arch:report": "depcruise src --output-type err-html > docs/architecture-report.html",
    "arch:check": "npm run arch:validate && npm run arch:graph",
    "validate:commands": "tsx scripts/validate-command-consistency.ts"
  },
  "lint-staged": {
    ".claude/commands/*.md": [
      "npm run validate:commands"
    ],
    "scripts/validate-command-consistency.ts": [
      "npm run validate:commands"
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/shelljs": "^0.8.17",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.35.0",
    "eslint-plugin-boundaries": "^5.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.2.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1",
    "zx": "^8.8.1"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.9.6",
    "p-limit": "^7.1.1",
    "shelljs": "^0.10.0",
    "zod": "^3.23.0"
  }
}
