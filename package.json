{
  "name": "@the-regent/cli",
  "version": "2.0.1",
  "description": "The Regent - AI-powered Clean Architecture CLI with guaranteed architectural quality",
  "type": "module",
  "main": "src/cli/main.js",
  "bin": {
    "regent": "./bin/regent"
  },
  "files": [
    "bin/**/*",
    "src/**/*",
    "templates/**/*",
    ".claude/**/*",
    "core/**/*",
    "scripts/**/*",
    ".vscode/**/*",
    "*.md",
    "*.ts",
    "*.js",
    "*.json",
    "package.json"
  ],
  "keywords": [
    "clean-architecture",
    "cli",
    "ai-assisted",
    "spec-driven",
    "typescript",
    "code-generation",
    "tdd",
    "ddd"
  ],
  "homepage": "https://github.com/thiagobutignon/the-regent#readme",
  "bugs": {
    "url": "https://github.com/thiagobutignon/the-regent/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagobutignon/the-regent.git"
  },
  "author": "Thiago Butignon <thiagobutignon@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prepare": "npm run templates:build",
    "prepublishOnly": "npm run test",
    "postinstall": "chmod +x bin/spec-ca",
    "lint": "eslint .",
    "test": "vitest --passWithNoTests",
    "templates:validate": "tsx validate-template.ts",
    "templates:validate-all": "tsx validate-template.ts --all",
    "templates:build": "./templates/build-template.sh",
    "execute": "tsx execute-steps.ts",
    "rlhf:analyze": "tsx core/rlhf-system.ts analyze",
    "rlhf:report": "tsx core/rlhf-system.ts report",
    "rlhf:dashboard": "tsx scripts/rlhf-dashboard.ts",
    "rollback": "tsx scripts/rollback-manager.ts"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/shelljs": "^0.8.17",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "js-yaml": "^4.1.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1",
    "zx": "^8.8.1"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.9.6",
    "shelljs": "^0.10.0",
    "zod": "^3.23.0"
  }
}
