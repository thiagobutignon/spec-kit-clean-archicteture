{
  "name": "@the-regent/cli",
  "version": "0.1.0",
  "description": "Modern CLI for The Regent built with React + Ink",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/main/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "clean-architecture",
    "regent",
    "ink",
    "react"
  ],
  "author": "The Regent Team",
  "license": "MIT",
  "dependencies": {
    "ink": "4.4.1",
    "react": "18.2.0",
    "commander": "11.1.0",
    "chalk": "5.3.0",
    "ora": "7.0.1",
    "inquirer": "9.2.12"
  },
  "devDependencies": {
    "@types/node": "20.10.5",
    "@types/react": "18.2.45",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "eslint": "8.56.0",
    "tsx": "4.7.0",
    "typescript": "5.3.3",
    "vitest": "1.1.0"
  }
}